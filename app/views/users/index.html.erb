
<h2>Listing Users</h2>
<div class="row">
  <div class="col-md-8">
  <table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th>Email</th>
      <td colspan="5"></td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr id="user_<%= user.id %>">
        <td colspan="3"><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, remote: true %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  <div class="col-md-4" id="show_user"></div>
</div>


<br>


<%  if user_signed_in? %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete%><br>

<% end %>